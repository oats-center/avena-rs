{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Avena Dashboard",
  "version": "0.1.0",
  "identifier": "com.anugunj.avena-dashboard",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Avena Dashboard",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon-16.png",
      "icons/icon-32.png",
      "icons/icon-64.png",
      "icons/icon-128.png",
      "icons/icon-256.png",
      "icons/icon-512.png"
    ],
    "category": "Productivity",
    "shortDescription": "LabJack data acquisition dashboard",
    "longDescription": "A modern dashboard for monitoring and managing LabJack data acquisition systems in roadside infrastructure applications."
  }
}
